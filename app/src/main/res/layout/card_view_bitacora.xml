<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maestra: Marta Martinez"
            android:textColor="@color/black"
            android:id="@+id/item_maestra"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26/04/2022"
            android:textColor="@color/black"
            android:id="@+id/item_fechaBitacora"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Este es el texto que la profesora escribe como las anotaciones
para la bitacora del alumno."
            android:textColor="@color/black"
            android:id="@+id/item_textBitacora"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="100dp"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>